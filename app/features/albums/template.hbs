{{#each model as |album|}}
  <div class='row'>
    <div class="album-header">
      <div class="album-header-image">
        <img src="{{album.imageURL}}"/>
      </div>
      <div class="album-header-title-display">
        <h1>{{album.title}}</h1>
        <h2>{{album.artist}}</h2>
        <h4>{{album.label}} | {{album.releaseYear}}</h4>
        {{#each album.reviews as |review|}}
          <h4>{{review.rating}}</h4>
        {{/each}}
        {{averageThis album.reviews}}

      </div>
      <div class="album-header-description">
        <p>{{markdown-to-html markdown=album.description}}</p>
      </div>
      <div class="font-icon">
        <i class="fa fa-headphones fa-3x"></i>
      </div>
    </div>

  </div>
  {{add-reviews album=album session=session updateRating='updateRating' createReview='createReview' user=session.user}}
{{/each}}
